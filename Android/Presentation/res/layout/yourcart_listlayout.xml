<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:mobicart="http://schemas.android.com/apk/res/com.mobicart.renamed_package"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/review_bg3"
  >
 <ImageView
     
  android:id="@+id/cart_list_row_red_icon_iv"
  android:layout_width="30px"
  android:layout_height="30px"
  android:layout_marginLeft="30dip"
  android:layout_marginTop="33dip"
  android:src="@drawable/red_icon_horizontal"
  android:scaleType="center"
  android:visibility="gone"
  />
  <RelativeLayout
  android:id="@+id/cart_list_row_image"
  android:layout_width="80dip"
  android:layout_height="80dip"
  android:layout_alignParentTop="true"
  android:layout_marginLeft="3dip"
  android:layout_marginTop="4dip"
  android:layout_marginBottom="6dip"
  android:paddingLeft="2dip"
  android:paddingTop="2dip"
  android:paddingRight="4dip"
  android:paddingBottom="4dip"
  android:gravity="center"
  android:background="@drawable/product_placeholder_standard"
  />
 <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/cart_list_row_product_title_tv"
  style="@style/TitleFont"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_width="150dip"
  android:layout_height="wrap_content"
  android:layout_marginLeft="10dip"
  android:layout_marginTop="3dip"
  android:layout_toRightOf="@+id/cart_list_row_image"
  android:textColor="#06678c"
  android:maxLines="3"
  android:ellipsize="none"
  />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/cart_list_price_tv"
  style="@style/TitleFont"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@+id/cart_list_row_image"
  android:layout_marginLeft="10dip"
  android:layout_below="@+id/cart_list_row_product_title_tv"
  android:textColor="#000000"
  android:singleLine="true"
  />
 <TableLayout 
 android:layout_width="150dip"
 android:layout_height="wrap_content"
 android:layout_below="@+id/cart_list_price_tv"
 android:layout_toRightOf="@+id/cart_list_row_image"
 android:layout_marginLeft="9dip"
 android:stretchColumns="0,1"
 android:id="@+id/option_table">
 </TableLayout>
 <TextView
  android:id="@+id/space_tv"
  android:layout_width="fill_parent"
  android:layout_height="2dip"
  android:layout_toRightOf="@+id/cart_list_row_image"
  android:layout_marginRight="10dip"
  android:layout_marginLeft="10dip"
  android:layout_below="@+id/option_table"
  />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/cart_list_product_qty_label__tv"
  style="@style/TextFont"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_alignParentRight="true"
  android:layout_alignParentTop="true"
  android:layout_marginRight="11dip"
  android:layout_marginTop="3dip"
  android:text="@string/cart_list_product_qty"
  android:textSize="12sp"
  android:textColor="#7e7e7e"  
  android:layout_below="@+id/cart_list_product_color_tv"
  android:singleLine="true"
  android:ellipsize="end"
  />
  <EditText
  android:id="@+id/cart_list_row_product_no_et"
  android:layout_width="wrap_content"
  android:layout_height="33dip"
  android:layout_marginRight="12dip"
  android:layout_marginTop="4dip"
  android:layout_alignParentRight="true"
  android:layout_below="@+id/cart_list_product_qty_label__tv"
  android:maxWidth="42dip"
  android:textStyle="bold"
  android:textSize="14sp"
  android:singleLine="true"
  android:textColor="#000000"
  android:text=""
  android:enabled="false"
  android:visibility="invisible"
   />
    <TextView
  android:id="@+id/cart_list_row_product_no_TV"
  android:layout_width="wrap_content"
  android:layout_height="33dip"
  android:layout_marginRight="12dip"
  android:layout_marginTop="6dip"
  android:layout_alignParentRight="true"
  android:layout_below="@+id/cart_list_product_qty_label__tv"
  android:maxWidth="42dip"
  android:textStyle="bold"
  android:textSize="14sp"
  android:singleLine="true"
  android:textColor="#000000"
  android:text=""
  
   />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/sub_totalTitle_tv1"
  style="@style/TextFont"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_marginTop="12dip"
  android:layout_toLeftOf="@+id/sub_totalValue_tv"
  android:layout_below="@+id/cart_list_row_product_no_et"
  android:textSize="13sp"
  android:textColor="#7e7e7e" 
  android:text="Sub total: "
  />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/sub_totalValue_tv"
  style="@style/TextFont"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_alignParentRight="true"
  android:layout_marginTop="12dip"
  android:layout_marginRight="10dip"
  android:layout_below="@+id/cart_list_row_product_no_et"
  android:textStyle="bold"
  android:textSize="12sp"
  android:textColor="#000000" 
  android:text=" $200.00"
  />
  <Button
  android:id="@+id/cart_list_row_delete_btn"
  android:layout_width="80dip"
  android:layout_height="40dip"
  android:layout_marginRight="20dip"
  android:layout_alignParentRight="true"
  android:layout_marginTop="33dip"
  android:background="@drawable/delete_button"
  android:visibility="gone"
  ></Button>
</RelativeLayout>
