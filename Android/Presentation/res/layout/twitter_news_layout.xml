<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:mobicart="http://schemas.android.com/apk/res/com.mobicart.renamed_package"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/wishlist_bg">
  <ImageView
  android:id="@+id/twitter_listImg_IV"
  android:layout_width="48dip"
  android:layout_height="48dip"
  android:layout_alignParentTop="true"
  android:layout_marginLeft="10dip"
  android:layout_marginTop="10dip"
  android:layout_marginBottom="10dip"
  android:layout_centerVertical="true"
  android:scaleType="fitCenter"
  />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/twitter_list_title_TV"
  style="@style/TitleFont"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_toRightOf="@+id/twitter_listImg_IV"
  android:layout_marginTop="7dip"
  android:layout_marginLeft="12dip"
  android:layout_alignParentTop="true"
  android:text="Simth"
  android:textColor="#449bbc"
  />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/twitter_listsize_TV"
  style="@style/TextFont"
  mobicart:ttf_name="Helvetica Neue.ttf"
  android:layout_toRightOf="@id/twitter_listImg_IV"
  android:layout_marginLeft="10dip"
  android:layout_marginTop="1dip"
  android:layout_marginRight="25dip"
  android:paddingBottom="7dip"
  android:layout_below="@id/twitter_list_title_TV"
  android:text="Can someone do somthing Can someone do somthing to me every 5 mins to stop me drifting off to sleep please?..."
  android:textSize="12sp"
  android:maxLines="4"
  android:textColor="#545454"
 />
 </RelativeLayout>
