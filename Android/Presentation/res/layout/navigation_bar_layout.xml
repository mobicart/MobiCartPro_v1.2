<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:mobicart="http://schemas.android.com/apk/res/com.mobicart.renamed_package"
  android:id="@+id/universal_navigation_bar"
  android:layout_width="fill_parent"
  android:layout_height="45dip"
  android:fadingEdge="none"
  android:background="#ffffff"
  >
  <RelativeLayout 
  android:id="@+id/universal_navigation_bar1"
  android:layout_width="fill_parent"
  android:layout_height="45dip"
  android:fadingEdge="none"
  android:background="@drawable/home_page_bg">
  <ImageView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/home_page_bg"
  />
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/universal_back_btn"
  style="@style/TextFontBtn"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:layout_alignParentLeft="true"
  android:background="@drawable/store_btn"
  android:layout_marginLeft="7dip"
  android:layout_centerVertical="true"
  android:visibility="invisible"
  android:maxLength="10"
  android:textColor="#ffffff"
  android:paddingLeft="12dip"
  android:paddingRight="4dip"
  android:ellipsize="end"
  android:textSize="12sp"
  />
 <RelativeLayout
  android:id="@+id/navigation_bar_logo_iv"
  android:layout_marginTop="5dip"
  android:layout_marginBottom="0dip"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:scaleType="center"
  android:layout_centerInParent="true"
  android:fadingEdge="none"
 /> 
 <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/navigation_bar_cart_btn" 
  style="@style/TextFontBtn"
  android:layout_height="wrap_content"
  android:layout_width="75dip"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:background="@drawable/cart_icon"
  android:layout_centerVertical="true"
  android:layout_alignParentRight="true"
  android:layout_marginRight="8dip"
  android:gravity="center_vertical|right"
  android:shadowColor="#cc000000"
  android:shadowDx="2"
  android:shadowDy="2"
  android:shadowRadius="2"
  android:textColor="#ffffffff"
 /> 
  <com.mobicart.renamed_package.utils.MyCommonView
  android:id="@+id/navigation_cart_btn" 
  style="@style/TextFontBtn"
  android:layout_height="wrap_content"
  android:layout_width="75dip"
  mobicart:ttf_name="Helvetica Neue Bold.ttf"
  android:background="@drawable/button_without_color"
  android:layout_centerVertical="true"
  android:layout_alignParentRight="true"
  android:layout_marginRight="8dip"
  android:paddingRight="15dip"
  android:gravity="center_vertical|right"
  android:text="Edit"
  android:shadowColor="#cc000000"
  android:shadowDx="2"
  android:shadowDy="2"
  android:shadowRadius="2"
  android:textSize="12sp"
  android:textColor="#ffffffff"
  android:visibility="gone"
  />
  </RelativeLayout>
</RelativeLayout>
